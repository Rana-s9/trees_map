        </div>
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-green-400" %>
          <%= f.password_field :password_confirmation, class: "mt-1 mb-6 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-400 focus:border-green-600 text-green-400" %>
